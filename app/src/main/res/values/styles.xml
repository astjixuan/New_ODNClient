<resources>

    <!-- Base application theme. Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activity_noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="black_text_style">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TextInputLayout 错误提示的颜色-->
    <style name="HintError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout_Demo01" parent="AppTheme">
        <item name="colorControlNormal">@color/alpha_35_black</item> <!-- 下划线没有获取焦点，也就是默认的颜色 -->
        <item name="colorControlActivated">@color/indicator_color_1</item> <!-- 点击时下划线的颜色 -->
    </style>

    <style name="black_bold_text">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="order_spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
