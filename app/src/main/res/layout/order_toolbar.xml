<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <!-- android:layout_gravity="center" 剧中-->

        <LinearLayout
            android:gravity="center"
            android:id="@+id/toolbar_address_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_address"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/toolbar_addressStr"
                style="@style/black_bold_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="位置：南京市普天局楼"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_blueSetting_layout"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/toolbar_blueImg"
                android:src="@drawable/ic_bluetooth_disabled"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/toolbar_blueStyle"
                android:textColor="@color/blue5"
                android:text="未连接"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</LinearLayout>
